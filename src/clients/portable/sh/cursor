#	$Header: cursor,v 1.1 88/08/12 07:44:06 sau Exp $
#	$Source: /tmp/mgrsrc/demo/sh/RCS/cursor,v $

#	set cursor style
SET=h
ESC=

if ismgrterm; then :
else
   echo "$0 only works on mgr terminals"
   exit 1
fi

case $1 in
	n*)		echo -n $ESC$SET;;
	l*)		echo -n ${ESC}1$SET;;
	b*)		echo -n ${ESC}3$SET;;
	u*)			echo -n ${ESC}4$SET;;
	r*)			echo -n ${ESC}2$SET;;
	i*)			echo -n ${ESC}5$SET;;
	*)				echo "Specify one of:"
					echo " n(ormal)"
					echo " b(ox)"
					echo " u(nderline)"
					echo " l(eft)"
					echo " r(ight)"
					echo " i(nvisible)";;
esac
